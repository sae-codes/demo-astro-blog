---
import type { CollectionEntry } from "astro:content";
import Post from "./Post.astro";
type Props = {
  posts: CollectionEntry<"posts">[]; // reference type post that matches Collections settings in config.ts
};

const { posts } = Astro.props;
---

<div class="grid grid-cols-2 gap-x-16 gap-y-14 max-md:grid-cols-1 mb-24">
  <!-- iterate through each post and reference Post component to display post -->
  {posts.map((post) => <Post post={post} />)}
</div>
